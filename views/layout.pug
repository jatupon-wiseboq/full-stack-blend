doctype html
html(lang='')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title #{title} - Hackathon Starter
    meta(name='description', content='')
    meta(name='theme-color' content='#4DA5F4')
    meta(name='csrf-token', content=_csrf)
    link(rel='shortcut icon', href='/images/favicon.png')
    link(rel='stylesheet', href='/css/main.css')

  body
    include partials/header
    if user
      .workspace-container
        .workspace-horizontal-container
          .workspace-horizontal-panel
            include partials/toolbar
        .workspace-horizontal-container.full-size
          .workspace-horizontal-panel
            .workspace-container
              .workspace-vertical-container
                .workspace-vertical-panel
                  include partials/explorer
                .workspace-vertical-panel.full-size
                  .workspace-container
                    .workspace-horizontal-container.full-size
                      .workspace-horizontal-panel.full-size
                        include partials/construction
                    .workspace-horizontal-container
                      .workspace-horizontal-panel
                        include partials/animation
                .workspace-vertical-panel
                  include partials/sidebar
    else
      include partials/flash
      block content

    script(src='/js/lib/jquery-3.1.1.min.js')
    script(src='/js/lib/popper.min.js')
    script(src='/js/lib/bootstrap.min.js')
    script(async defer src="https://buttons.github.io/buttons.js")
    script(src='/js/main.js')
    script(src='/js/construction/editor.js')

    //- Google Analytics: change UA-38177297-2 to be your site's ID
    script.
      window.ga=function(){ga.q.push(arguments)};ga.q=[];ga.l=+new Date;
      ga('create','UA-38177297-2','auto');ga('send','pageview')
    script(src='https://www.google-analytics.com/analytics.js' async defer)
